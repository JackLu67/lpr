/* pages/authentication/index.wxss */
page {
  box-sizing: border-box;
}
.container {
  position: relative;
  height: 100%;
  width: 100%;
}
.page-bgn {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -999;
}
.form-box {
  background: #fff;
}
.item {
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}
.my-input {
  flex: 1;
  text-align: right;
}
.btn {
  padding: 0 !important;
  width: 640rpx !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  font-weight: normal !important;
  margin: 0 auto;
  margin-top: 58rpx;
  color: #fff;
  background-color: #ed1e25;
}