/* pages/authentication/index.wxss */
page {
  padding-bottom: 50rpx;
}
.container {
  position: relative;
  height: 100%;
  width: 100%;
}
.page-bgn {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -999;
}
form {
  display: block;
  margin-top: 30rpx;
}
.item {
  font-size: 28rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}
.my-input {
  flex: 1;
  text-align: right;
}
.check-box {
  width: 640rpx;
  margin: 28rpx auto;
}
.check-box view {
  font-size: 24rpx;
  color: #000;
  display: inline;
}
.wx-checkbox-input {
  width: 30rpx !important;
  height: 30rpx !important;
  border-color: #000 !important;
}
.btn {
  padding: 0 !important;
  width: 640rpx !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  font-weight: normal !important;
  margin: 0 auto;
  color: #fff;
  background-color: #ed1e25;
}